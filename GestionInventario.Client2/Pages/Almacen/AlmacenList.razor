@page "/almacens"
@using GestionInventario.Client2.Services.Almacen
@using GestionInventarios.Shared.DTOs.Almacen
@inject IAlmacenService AlmacenService
@inject NavigationManager NavigationManager

<div class="container mt-4">
    <h3 class="mb-4">Almacenes</h3>

    @if (almacenes == null)
    {
        <div class="alert alert-info" role="alert">
            <strong>Cargando...</strong>
        </div>
    }
    else
    {
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Id</th>
                    <th>Nombre</th>
                    <th>Ubicación</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var almacen in almacenes)
                {
                    <tr>
                        <td>@almacen.AlmacenId</td>
                        <td>@almacen.Nombre</td>
                        <td>@almacen.Ubicacion</td>
                        <td>
                            <button class="btn btn-warning btn-sm me-2" @onclick="() => EditAlmacen(almacen.AlmacenId)">Editar</button>
                            <button class="btn btn-danger btn-sm" @onclick="() => DeleteAlmacen(almacen.AlmacenId)">Eliminar</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <button class="btn btn-primary" @onclick="CreateAlmacen">Crear Nuevo Almacen</button>
    }
</div>

@code {
    private List<AlmacenGetDTO> almacenes;

    protected override async Task OnInitializedAsync()
    {
        almacenes = await AlmacenService.GetAlmacenesAsync();
    }

    private void CreateAlmacen()
    {
        NavigationManager.NavigateTo("/almacens/create");
    }

    private void EditAlmacen(int id)
    {
        NavigationManager.NavigateTo($"/almacens/edit/{id}");
    }

    private async Task DeleteAlmacen(int id)
    {
        await AlmacenService.DeleteAlmacenAsync(id);
        almacenes = await AlmacenService.GetAlmacenesAsync(); // Reload the list
    }
}
