@page "/ajustes/create"
@using GestionInventario.Client2.Services.Ajuste
@using GestionInventarios.Shared.DTOs.Ajuste
@inject IAjusteServicio AjusteService
@inject NavigationManager NavigationManager

<h3>Crear Ajuste</h3>

<EditForm Model="newAjuste" OnValidSubmit="HandleValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="form-group">
        <label>Producto Id:</label>
        <InputNumber @bind-Value="newAjuste.ProductoId" class="form-control" />
    </div>
    <div class="form-group">
        <label>Almacen Id:</label>
        <InputNumber @bind-Value="newAjuste.AlmacenId" class="form-control" />
    </div>
    <div class="form-group">
        <label>Cantidad:</label>
        <InputNumber @bind-Value="newAjuste.Cantidad" class="form-control" />
    </div>
    <div class="form-group">
        <label>Fecha:</label>
        <InputDate @bind-Value="newAjuste.Fecha" class="form-control" />
    </div>
    <div class="form-group">
        <label>Tipo:</label>
        <InputText @bind-Value="newAjuste.Tipo" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Guardar</button>
</EditForm>

@code {
    private AjusteInsertDTO newAjuste = new AjusteInsertDTO();

    private async Task HandleValidSubmit()
    {
        var success = await AjusteService.CreateAjusteAsync(newAjuste);
        if (success)
        {
            NavigationManager.NavigateTo("/ajustes");
        }
        else
        {
            // Handle error
        }
    }
}
