@page "/ajustes/create"
@using GestionInventario.Client2.Services.Ajuste
@using GestionInventarios.Shared.DTOs.Ajuste
@using GestionInventarios.Shared.DTOs.Producto
@using GestionInventarios.Shared.DTOs.Almacen
@inject IAjusteServicio AjusteService
@inject NavigationManager NavigationManager

<div class="container mt-4">
    <h3 class="mb-4">Crear Ajuste</h3>

    <EditForm Model="newAjuste" OnValidSubmit="HandleValidSubmit">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <div class="mb-3">
            <label class="form-label">Producto:</label>
            <InputSelect @bind-Value="newAjuste.ProductoId" class="form-control">
                <option value="">Seleccione un producto</option>
                @foreach (var producto in productos)
                {
                    <option value="@producto.ProductoId">@producto.Nombre</option>
                }
            </InputSelect>
        </div>
        <div class="mb-3">
            <label class="form-label">Almacen:</label>
            <InputSelect @bind-Value="newAjuste.AlmacenId" class="form-control">
                <option value="">Seleccione un almacen</option>
                @foreach (var almacen in almacenes)
                {
                    <option value="@almacen.AlmacenId">@almacen.Nombre</option>
                }
            </InputSelect>
        </div>
        <div class="mb-3">
            <label class="form-label">Cantidad:</label>
            <InputNumber @bind-Value="newAjuste.Cantidad" class="form-control" />
        </div>
        <div class="mb-3">
            <label class="form-label">Fecha:</label>
            <InputDate @bind-Value="newAjuste.Fecha" class="form-control" />
        </div>
        <div class="mb-3">
            <label class="form-label">Tipo:</label>
            <InputText @bind-Value="newAjuste.Tipo" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary">Guardar</button>
    </EditForm>
</div>

@code {
    private AjusteInsertDTO newAjuste = new AjusteInsertDTO();
    private List<ProductoGetDTO> productos;
    private List<AlmacenGetDTO> almacenes;

    protected override async Task OnInitializedAsync()
    {
        productos = await AjusteService.GetProductosAsync();
        almacenes = await AjusteService.GetAlmacenesAsync();
    }

    private async Task HandleValidSubmit()
    {
        var success = await AjusteService.CreateAjusteAsync(newAjuste);
        if (success)
        {
            NavigationManager.NavigateTo("/ajustes");
        }
        else
        {
            // Handle error
        }
    }
}
