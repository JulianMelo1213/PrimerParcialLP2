@page "/entradas"
@using GestionInventario.Client2.Services.Entrada
@using GestionInventarios.Shared.DTOs.Entrada
@inject IEntradaService EntradaService
@inject NavigationManager NavigationManager

<div class="container mt-4">
    <h3 class="mb-4">Entradas</h3>

    @if (entradas == null)
    {
        <div class="alert alert-info" role="alert">
            <strong>Cargando...</strong>
        </div>
    }
    else
    {
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Id</th>
                    <th>Producto</th>
                    <th>Cantidad</th>
                    <th>Fecha</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var entrada in entradas)
                {
                    <tr>
                        <td>@entrada.EntradaId</td>
                        <td>@entrada.ProductoNombre</td>
                        <td>@entrada.Cantidad</td>
                        <td>@entrada.Fecha.ToShortDateString()</td>
                        <td>
                            <button class="btn btn-warning btn-sm me-2" @onclick="() => EditEntrada(entrada.EntradaId)">Editar</button>
                            <button class="btn btn-danger btn-sm" @onclick="() => DeleteEntrada(entrada.EntradaId)">Eliminar</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <button class="btn btn-primary" @onclick="CreateEntrada">Crear Nueva Entrada</button>
    }
</div>

@code {
    private List<EntradaGetDTO> entradas;

    protected override async Task OnInitializedAsync()
    {
        entradas = await EntradaService.GetEntradasAsync();
    }

    private void CreateEntrada()
    {
        NavigationManager.NavigateTo("/entradas/create");
    }

    private void EditEntrada(int id)
    {
        NavigationManager.NavigateTo($"/entradas/edit/{id}");
    }

    private async Task DeleteEntrada(int id)
    {
        await EntradaService.DeleteEntradaAsync(id);
        entradas = await EntradaService.GetEntradasAsync(); // Reload the list
    }
}
